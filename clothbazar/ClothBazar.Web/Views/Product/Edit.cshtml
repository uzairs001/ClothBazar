@model Product
@{
    ViewBag.Title = "Edit";
}

<h2>Edit Product</h2>
<form id="CreateForm">
    <input type="hidden" name="ID"  value="@Model.ID"/>
    <label>Name</label>
    <input name="Name" value="@Model.Name" />
    <br />
    <label>Description</label>
    <input name="Description" value="@Model.Description"/>
    <br />

    <label>Price</label>
    <input name="Price" value="@Model.Price" />
    <br />
    <button id="updateBtn" type="button">Update</button>
</form>
<script>
    $("#updateBtn").click(function ()
    {
        $.ajax({
            type: "POST",
            url: "/Product/Edit",
            data: 
                $("#CreateForm").serialize()
            
        })
         .done(function (response) {
             $("#tableContainer").html(response);
             $("#newContainer").html("");
         })
         .fail(function (HMLHttpRequest,textStatus,errorThrown) {
             alert("FAIL");
         });





    }
    );
</script>


